<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="64dp"
    android:clipToPadding="false">

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/imageViewSenderProfile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_profile_shape"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_myplaces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSenderName" />

    <!-- 보낸 사람 이름 -->
    <TextView
        android:id="@+id/textViewSenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewSenderProfile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="사용자 이름" />

    <LinearLayout
        android:id="@+id/layoutMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bubble_received"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewSenderProfile"
        app:layout_constraintTop_toBottomOf="@+id/textViewSenderName"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/textViewMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            tools:text="이것은 상대방으로부터 받은 메시지입니다. 내용이 길어질 경우 자동으로 줄바꿈이 됩니다." />

        <LinearLayout
            android:id="@+id/layoutMetaContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/layoutLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:paddingEnd="8dp">

                <ImageView
                    android:id="@+id/imageViewLikeIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:tint="@color/like_icon_color_received"
                    tools:src="@drawable/like_on" />

                <TextView
                    android:id="@+id/textViewLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/like_icon_color_received"
                    tools:text="1"
                    android:layout_marginStart="4dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#757575"
                tools:text="오전 10:05" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
